<launch>
<!-- ATTENTION mettre les fichiers utilisÃ©s sur la branche -->
<!-- lance simulation sur chrono initialiser 0 -->
     <param name="/use_sim_time" value="true" /> 
     <!--<include file="$(find turtlebot_bringup)/launch/minimal.launch"/>-->
     
    <include file="$(find larm)/launch/challenge-1.launch"/>

<!-- fait marcher le scan -->
    <arg name="scan_topic"  default="scan" />

<!-- gmapping -->    
    <node name="gmapping" pkg="gmapping" type="slam_gmapping">
    	<remap from="scan" to="$(arg scan_topic)"/>
    	<param name="maxUrange" value="4.0"/>
    </node>

<!-- node pour exploration-->
    <!--<node pkg="grp-jade" name = "reconnaissance" type="challenge2.py" output="screen"/>-->
    <node pkg="grp-jade" name = "move" type="move.py" output="screen"/>

<!-- Lance rviz -->
    <node pkg="rviz" name="rviz" type="rviz" args="-d $(find grp-jade)/include/rvizconfiglaser_rosbag.rviz"/>  
    
</launch>